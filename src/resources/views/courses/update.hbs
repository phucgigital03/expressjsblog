<div class="mt-4">
    <h3>cap nhap khoa hoc</h3>

    <form method="POST" action="/courses/storeUpdate?_method=PATCH">
        <div class="form-group" style="display: none;">
            <input type="text" value="{{course._id}}" class="form-control" id="id" name="_id">
        </div>
        <div class="form-group">
            <label for="videoId">videoId</label>
            <input type="text" value="{{course.videoId}}" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="des">description</label>
            <input type="text" value="{{course.description}}" class="form-control" id="des" name="description">
        </div>
        <div class="form-group">
            <label for="name">name</label>
            <input type="text" value="{{course.name}}" class="form-control" id="name" name="name">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
